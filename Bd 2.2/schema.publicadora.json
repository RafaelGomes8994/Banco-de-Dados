{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["Nome_Publicadora", "contato"],
    "additionalProperties": false,
    "properties": {
      "_id": { "bsonType": "objectId" },
      "Nome_Publicadora": { 
        "bsonType": "string",
        "maxLength": 255,
        "description": "Nome único da editora/publicadora"
      },
      "contato": { 
        "bsonType": "string",
        "maxLength": 100,
        "description": "Informação de contato (email, telefone, etc)"
      }
    }
  }
}
